<%= form_tag admin_sessions_path, :class => 'form-signin' do %>
	<h3 class="form-signin-heading">Login | 876PartsFinder</h3>
	<!-- Alerts and Messages -->
	<% if flash[:notice] %>
		<div class="alert alert-success"><%= flash[:notice] %></div>
	<% end %>

	<% if flash[:alert] %>
		<div class="alert alert-danger"><%= flash[:alert] %></div>
	<% end %>
	<p>
		<%= text_field_tag :email, params[:email], class:'form-control', placeholder: 'Email Address' %><br />
		<%= password_field_tag :password,'', class:'form-control', placeholder: 'Password' %>
		<br />
	</p>
	<%= submit_tag "Login", class:'btn btn-lg btn-primary btn block' %>
<% end %>