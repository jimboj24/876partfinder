<script>
  $(function() {
    $('textarea#froala-editor').froalaEditor({
      height: 300
    })
  });
</script>
<h2>Part Search Request</h2>

<%= form_for @part do |f| %>
      <% if @part.errors.any? %>
        <% @part.errors.full_messages.each do |msg| %>
          <!-- Show errors -->
          <div class="alert alert-danger"><%= msg %></div>
        <% end %>
      <% end %>
    <p>
      <div class="form-group">
        <%= f.label :make %>
        <%= f.text_field :make, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :model %>
        <%= f.text_field :model, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :vin, "VIN/Chassis number" %>
        <%= f.text_field :vin, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :year %>
        <%= f.text_field :year, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :part_name %>
        <%= f.text_field :part_name, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :details, "Description" %>
        <%= f.text_area :details, class:'form-control', id:'froala-editor' %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <hr />
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email_address %>
        <%= f.text_field :email_address, placeholder: 'user@example.com', class:'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, placeholder: '555-555-5555', class:'form-control' %>
      </div>

      <%= f.submit "Submit", class:'btn btn-primary' %>
      <%= link_to "Cancel", parts_path, class:'btn btn-default' %>
    <% end %>
    </p>
